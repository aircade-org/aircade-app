{
  "name": "aircade",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,mjs,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,mjs,json,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run generate --filter=@repo/types",
    "db:push": "pnpm --filter @repo/types db:push",
    "db:migrate": "pnpm --filter @repo/types db:migrate",
    "db:studio": "pnpm --filter @repo/types db:studio"
  },
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "prettier": "@repo/prettier-config"
}
